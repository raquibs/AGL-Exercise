@model IEnumerable<WebApiClient.Models.Dto.PersonDto>



<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <div class="panel panel-primary ">
                <div class="panel-heading">
                    Displayed using Table And UL
                </div>
                <div class="panel-body">
                    <table id="ownerList" class="table table-bordered table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Gender)
                            </th>
                            <th>
                                Owners with Pets
                            </th>
                        </tr>

                        @foreach (var group in Model.GroupBy(item => item.Gender))
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => group.Key)
                        </td>
                        <td>
                            <table>
                                @foreach (var item in group)
                                        {
                                            if (item.pets != null)
                                            {
                                    <tr>
                                        <td>
                                            @Html.Encode(item.Name)
                                        </td>
                                        <td>
                                            <ul>
                                                @foreach (var pet in item.pets)
                                                            {
                                                        <li>@Html.Encode(pet.Type)  :  @Html.Encode(pet.Name) </li>
                                                            }
                                            </ul>
                                        </td>
                                    </tr>
                                            }

                                        }
                            </table>
                        </td>

                    </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
        <div class="col-xs-6">
                <div class="panel panel-primary">
                <div class="panel-heading">
                    Displayed using UL
                </div>
                <div class="panel-body">
                    <ul>
                        @foreach (var group in Model.GroupBy(item => item.Gender))
                        {
                        <li>
                            @Html.Encode(group.Key)
                            <ul>
                                @foreach (var item in group.OrderBy(g => g.Name))
                                    {
                                        if (item.pets != null)
                                        {
                                    <li>@Html.Encode(item.Name)</li>
                                            foreach (var pet in item.pets)
                                            {
                                    <ul>
                                        <li>@Html.Encode(pet.Type)  :  @Html.Encode(pet.Name) </li>
                                    </ul>
                                            }
                                        }


                                    }

                            </ul>
                        </li>

                        }
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>



